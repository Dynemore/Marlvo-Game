<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adin.test2.MainActivity"
    android:background="@color/fbutton_color_belize_hole">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@+id/laybut1">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            fbutton:srcCompat="@drawable/marvel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="8dp"
        android:id="@+id/laybut1">
        <info.hoang8f.widget.FButton
            android:text="Hero Quiz"
            android:id="@+id/buttonQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="250dp"
            android:height="10dp"
            android:textSize="20dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/fbutton_color_clouds"
            fbutton:buttonColor="@color/fbutton_color_carrot"
            fbutton:shadowColor="@color/fbutton_color_pomegranate"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="3dp"
            fbutton:cornerRadius="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/laybut1"
        android:id="@+id/laybut2"
        android:layout_centerHorizontal="true">
        <info.hoang8f.widget.FButton
            android:text="Tumblr Marvel Art"
            android:id="@+id/buttonTumblr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="250dp"
            android:height="10dp"
            android:textSize="20dp"
            android:textColor="@color/fbutton_color_clouds"
            fbutton:buttonColor="@color/fbutton_color_carrot"
            fbutton:shadowColor="@color/fbutton_color_pomegranate"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="3dp"
            fbutton:cornerRadius="5dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@id/laybut2"
        android:layout_alignParentBottom="true"
        android:id="@+id/laybut3">

        <TextView
            android:background="@color/fbutton_color_carrot"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:textColor="@color/fbutton_color_clouds"
            android:text="Data provided by Marvel. Â© 2017 Marvel"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</RelativeLayout>
