<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adin.test2.TumblrArt_Page"
    android:background="@color/fbutton_color_belize_hole">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:id="@+id/linearLayout">
    <TextView
        android:id="@+id/textViewTumblr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:textColor="@color/fbutton_color_clouds"
        android:padding="20dp"
        android:textSize="35dp"
        android:textStyle="bold"
        android:text="Marvel Fan Art" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayout"
        android:layout_centerHorizontal="true"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layimg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layimg1"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                    android:id="@+id/imageTum1"
                    android:layout_width="500dp"
                    android:layout_height="500dp"
                    android:gravity="top"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true"
                    app:siSquare="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:textColor="@color/fbutton_color_clouds"
                        android:text="Credit to this Blog : "
                        android:textAppearance="@color/fbutton_color_carrot"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:paddingBottom="10dp">
                    </TextView>
                    <TextView
                        android:id="@+id/textViewTum1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:textColor="@color/fbutton_color_pomegranate"
                        android:textSize="20dp"
                        android:paddingBottom="10dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layimg2"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageTum2"
                    android:layout_width="500dp"
                    android:layout_height="500dp"
                    android:gravity="top"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true">
                </ImageView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:textColor="@color/fbutton_color_clouds"
                        android:text="Credit to this Blog : "
                        android:textAppearance="@color/fbutton_color_carrot"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:paddingBottom="10dp">
                    </TextView>
                    <TextView
                        android:id="@+id/textViewTum2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:textColor="@color/fbutton_color_pomegranate"
                        android:textSize="20dp"
                        android:paddingBottom="10dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layimg3"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageTum3"
                    android:layout_width="500dp"
                    android:layout_height="500dp"
                    android:gravity="top"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:textColor="@color/fbutton_color_clouds"
                    android:text="Credit to this Blog : "
                    android:textAppearance="@color/fbutton_color_carrot"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingBottom="10dp">
                </TextView>
                <TextView
                    android:id="@+id/textViewTum3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:textColor="@color/fbutton_color_pomegranate"
                    android:textSize="20dp"
                    android:paddingBottom="10dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layimg4"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageTum4"
                    android:layout_width="500dp"
                    android:layout_height="500dp"
                    android:gravity="top"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:textColor="@color/fbutton_color_clouds"
                    android:text="Credit to this Blog : "
                    android:textAppearance="@color/fbutton_color_carrot"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingBottom="10dp">
                </TextView>
                <TextView
                    android:id="@+id/textViewTum4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:textColor="@color/fbutton_color_pomegranate"
                    android:textSize="20dp"
                    android:paddingBottom="10dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layimg5"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageTum5"
                    android:layout_width="500dp"
                    android:layout_height="500dp"
                    android:gravity="top"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:textColor="@color/fbutton_color_clouds"
                    android:text="Credit to this Blog : "
                    android:textAppearance="@color/fbutton_color_carrot"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingBottom="10dp">
                </TextView>
                <TextView
                    android:id="@+id/textViewTum5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:textColor="@color/fbutton_color_pomegranate"
                    android:textSize="20dp"
                    android:paddingBottom="10dp">
                </TextView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
